<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registerActivity">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="min amt 1000â‚¹"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amt" />

        <EditText
            android:id="@+id/amt"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:ems="12"
            android:hint="Amount"
            android:inputType="number"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:textAlignment="textStart"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accNumber" />

        <TextView
            android:id="@+id/accNumber"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:textColorHint="@color/white"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/pan"
            app:layout_constraintTop_toBottomOf="@+id/pan" />

        <Button
            android:id="@+id/generate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/floating_button_btn"
            android:text="generate no."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pan" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="28dp"
            android:text="Account Number :"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/generate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pan" />

        <EditText
            android:id="@+id/pan"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="PAN number"
            android:inputType="textPostalAddress"
            android:padding="15dp"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address" />

        <EditText
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aadhaar" />

        <EditText
            android:id="@+id/aadhaar"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:ems="12"
            android:hint="AADHAAR NO."
            android:inputType="number"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:textAlignment="textStart"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Bank Details"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputRegisterConfirm" />

        <EditText
            android:id="@+id/inputFname"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="FirstName"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:paddingStart="30dp" />

        <EditText
            android:id="@+id/inputLname"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="LastName"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/inputFname"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/inputFname"
            app:layout_constraintTop_toBottomOf="@+id/inputFname" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.027" />

        <EditText
            android:id="@+id/inputUserName"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="UserName"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/inputLname"
            app:layout_constraintStart_toStartOf="@+id/inputLname"
            app:layout_constraintTop_toBottomOf="@+id/inputLname" />

        <EditText
            android:id="@+id/inputRegisterConfirm"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="confirm"
            android:inputType="textPassword"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/inputRegisterPass"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/inputRegisterPass"
            app:layout_constraintTop_toBottomOf="@+id/inputRegisterPass" />

        <EditText
            android:id="@+id/inputRegisterPass"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/inputRegisterEmail"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/inputRegisterEmail"
            app:layout_constraintTop_toBottomOf="@+id/inputRegisterEmail" />

        <EditText
            android:id="@+id/inputRegisterEmail"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/inputUserName"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/inputUserName"
            app:layout_constraintTop_toBottomOf="@+id/inputUserName" />

        <Button
            android:id="@+id/registerNextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/floating_button_btn"
            android:text="Submit"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/inputRegisterConfirm"
            app:layout_constraintTop_toBottomOf="@+id/amt" />

        <ProgressBar
            android:id="@+id/regProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
            app:layout_constraintVertical_bias="1.0" />

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="402dp"
            android:layout_height="22dp"
            android:layout_marginTop="34dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.238"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerNextBtn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Have an Account?" />

            <TextView
                android:id="@+id/loginTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@android:color/holo_orange_dark" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

